<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="warron.phpprojectandroid">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MOUNT_UNMOUNT_FILESYSTEMS"/>

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">


        <!--登录模块-->
        <activity
            android:name=".LoginMudule.LoginActivity"
            android:screenOrientation="portrait">

        </activity>

        <activity
            android:name=".LoginMudule.RegisterActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name=".LoginMudule.ForgetPassAC"
            android:screenOrientation="portrait" />

        <!--主页-->
        <activity
            android:name=".MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".Tools.CommonListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Tools.EmptyListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Tools.GridListActivity"
            android:screenOrientation="portrait" />

        <activity
            android:name=".Tools.FooterListActivity"
            android:screenOrientation="portrait" />
        <activity

            android:name="me.iwf.photopicker.PhotoPickerActivity"
            />

        <activity
            android:theme="@style/Theme.AppCompat.NoActionBar"
            android:name="me.iwf.photopicker.PhotoPagerActivity"
            />
    </application>

</manifest>